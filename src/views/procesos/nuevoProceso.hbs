<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo Proceso</h3>
    </div>
    <div class="card-body">
      <form action="/crearProceso" method="POST">
        <div class="form-group">
          <input type="text" name="referencia" class="form-control" placeholder="Ref Inmueble" value="{{referencia}}">
        </div>
        <div class="form-group">
          <input type="text" name="direccion" class="form-control" placeholder="Dirección del Inmueble" value="{{direccion}}">
        </div>
        <div class="form-group">
          <input type="text" name="precioFinal" class="form-control" placeholder="Precio Final de Venta" value="{{precioFinal}}">
        </div>
        <hr>
        <div class="form-group">
          <input type="text" name="nombreCliente" class="form-control" placeholder="Nombre Cliente" value="{{nombreCliente}}">
        </div>
        <div class="form-group">
          <input type="text" name="telefonoCliente" class="form-control" placeholder="Teléfono Cliente" value="{{telefonoCliente}}">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
